@page "/join"
@inject NavigationManager Navigation

<h3>Join an Existing Survey</h3>
<p>Enter the 4-letter code:</p>
<input @bind="code" placeholder="Enter the code" maxlength="4" />
<button @onclick="JoinExistingSurvey">Join</button>

@code {
    private string code;

    private void JoinExistingSurvey()
    {
        Navigation.NavigateTo($"/{code}");
    }
}